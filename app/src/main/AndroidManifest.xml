<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Android 13+ 通知权限，用于显示前台服务通知 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <!-- 前台服务基础权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- Android 14+ 录屏专用前台服务权限 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <!-- 仅供 Android 9 及以下写入公共 Movies 使用 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Ba_recorder">

        <activity
            android:name="com.zhuqing.ba_recorder.MainActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name="com.zhuqing.ba_recorder.RecordingFgService"
            android:exported="false"
            android:foregroundServiceType="mediaProjection" />

    </application>

</manifest>
